{
	"private": true,
	"packageManager": "pnpm@8.3.1",
	"workspaces": [
		"packages/*",
		"plugins/*"
	],
	"scripts": {
		"build": "turbo run build",
		"create-package": "esno ./scripts/create-package.js",
		"create-plugin": "esno ./scripts/create-plugin.js",
		"dev": "turbo run dev --no-deps",
		"format": "turbo run format",
		"lint": "turbo run lint",
		"npm-publish": "pnpm publish  --access=public",
		"prepare": "husky install",
		"test": "vitest",
		"type-check": "turbo run type-check"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.1",
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@theurgi/eslint-config": "^1.13.0",
		"@types/node": "^18.16.9",
		"eslint": "^8.40.0",
		"esno": "^0.16.3",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"tsup": "^6.7.0",
		"turbo": "^1.9.4",
		"typescript": "^5.0.4",
		"vitest": "^0.30.1"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --cache --fix",
		"*.{js,json,md,ts}": "prettier --write"
	}
}
